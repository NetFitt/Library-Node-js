<% if(!books.length == 0){ %>
  <table  class="table table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">image</th>
        <th scope="col">title</th>
        <th scope="col">auther</th>
        <th scope="col">price</th>
        <th scope="col">options</th>
      </tr>
    </thead>
    <% for(let book of books){ %>
    <tbody>
      <tr>
        <th scope="row">1</th>
        <td><img style="width:120px" src="/uploads/<%= book.image %>" alt="<%= book.image %>"></td>
        <td><p style="color:white"><%= book.title %></p> </td>
        <td><p style="color:white"><%= book.auther %></p> </td>
        <td><p style="color:white"><%= book.price %>$</p> </td>
        <td>
          <button class="btn btn-primary ">Update</button>
          <button class="btn btn-danger ">Delete</button>
        </td>
      </tr>
    </tbody>
    <% } %>
  </table>
  
<% }else { %>
  <h1>pls Add some books b</h1>
  <a href="/books/addbooks">
    <button class="btn btn-primary btn-lg">Add books</button>
  </a>
  
  
  <% } %>
